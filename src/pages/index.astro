---
import config from "config";
import Base from "../layouts/Base.astro";

const title = config.get("title");
---

<Base title={title}>
  <article>
    <style>
      article {
        max-width: 800px;
        margin: 5rem auto;
      }
      div {
        margin: 2rem auto;
      }
      div img {
        margin: 1rem 0;
      }
      img {
        max-width: 100%;
        height: auto;
      }
    </style>
  </article>
</Base>
